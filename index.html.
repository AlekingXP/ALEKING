    }

    .ojo {
      width: 50px;
      height: 50px;
      background: #fff;
      border: 3px solid #000;
      border-radius: 50%;
      position: relative;
      overflow: hidden;
    }

    .pupila {
      width: 20px;
      height: 20px;
      background: #000;
      border-radius: 50%;
      position: absolute;
      top: 15px;
      left: 15px;
      transition: all 0.2s ease;
    }

    @keyframes aparecer {

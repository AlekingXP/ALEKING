    .carta {
      width: 350px;
      height: 250px;
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.2);
      text-align: center;
      padding: 30px;
      animation: aparecer 1.5s ease;
    }

    .carta h1 {
      color: #ff3366;
      font-size: 26px;
      margin-bottom: 20px;
    }

    /* Ojitos */
    .ojos {
      display: flex;
      justify-content: center;
